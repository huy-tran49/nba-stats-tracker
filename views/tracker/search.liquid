{% layout "layout.liquid" %}
{% block content %}

<div class="container-sm mb-3">
    <form action="/tracker" method="POST">
        <fieldset>
            <legend>Search Player</legend>
            <label class="form-label mb-3">Search Player: </label>
            <input 
                type="text" 
                name="lastName" 
                placeholder="Enter player last name"
                class="form-control mb-3">
    </form>
    <input type="submit" value="Search Player" class="btn btn-success">
</div>


{% endblock %}