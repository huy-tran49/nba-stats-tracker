{% layout "layout.liquid" %}
{% block content %}

<div class="container-sm mb-3">
    <form action="/search" method="POST">
        <fieldset>
            <legend>Search Player</legend>
            <label class="form-label mb-3">Search Player: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter player last name"
                class="form-control mb-3">
    </form>
    <input type="submit" value="Search Player" class="btn btn-success">
</div>

<div class="container-sm">
    <form action="/search" method="POST">
        <fieldset>
            <legend>Search Team</legend>
            <label class="form-label mb-3">Search Team: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter team name"
                class="form-control mb-3">
    </form>
    <input type="submit" value="Search Team" class="btn btn-success">
</div>

{% endblock %}