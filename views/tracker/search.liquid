{% layout "layout.liquid" %}
{% block content %}

<div class="container-sm mb-3">
    <form action="/tracker/ps" method="POST">
        <fieldset>
            <legend>Search Player</legend>
            
            <input 
                type="text" 
                name="lastName" 
                placeholder="Enter player name"
                class="form-control mb-3">
    </form>
    <input type="submit" value="Search Player" class="btn btn-success">
</div>

<div class="container-sm">
    <form action="/tracker/ts" method="POST">
        <fieldset>
            <legend>Show All Teams</legend>
     
    </form>
    <input type="submit" value="Show Team" class="btn btn-success">
</div>




{% endblock %}