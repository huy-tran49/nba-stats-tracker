{% layout "layout.liquid" %}
{% block content %}

<div class="container-sm mb-3">
    <form action="/tracker" method="POST">
        <fieldset>
            <legend>Add Player</legend>
            <label class="form-label mb-3">Add Player: </label>
            <input 
                type="text" 
                name="lastName" 
                placeholder="enter player last name"
                class="form-control mb-3">
    </form>
    <input type="submit" value="Add Player" class="btn btn-success">
</div>


{% endblock %}