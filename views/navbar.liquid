{% block content %}
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a href="/" class="navbar-brand">Main</a>
      {% if loggedIn %}
        <a href="/" class="nav-link text-light me-4">Hello {{ username }}
        </a>
      {% endif %}
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        {% if loggedIn %}
          <a href="/tracker/all" class="nav-link text-light me-4">View All</a>
          <a href="/tracker/search" class="nav-link text-light me-4">Search</a>
          <a href="/tracker/team/myteam" class="nav-link text-light me-4">My Team</a>
          <a href="/tracker/player/myplayer" class="nav-link text-light me-4">My Player</a>
          <a href="/auth/logout" class="nav-link text-light me-4">Log Out</a>
        {% else %}
          <a href="/auth/signup" class="nav-link text-light me-4">Sign Up</a>
          <a href="/auth/login" class="nav-link text-light me-4">Sign In</a>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}